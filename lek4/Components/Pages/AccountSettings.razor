@page "/account-settings"
@using Firebase.Auth
@using System.Text.Json
@using System.Text
@inject NavigationManager NavigationManager
@inject HttpClient HttpClient
@inject FirebaseAuthClient AuthClient


<div class="account-settings">
    <h4>Account Settings</h4>
    <div class="button-group">
        <button @onclick="NavigateToChangePassword" class="change-password-button">Change Password</button>
        <button @onclick="DeleteAccount" class="delete-button">Delete Account</button>
    </div>
    <div class="error-message">
        @errorMessage
    </div>
</div>

@code {
    private User user;
    private string errorMessage;

    protected override void OnInitialized()
    {
    }
    private void NavigateToChangePassword()
    {
        NavigationManager.NavigateTo("/change-password");
    }

    private async Task DeleteAccount()
    {
        var confirm = await Application.Current.MainPage.DisplayAlert("Confirm Delete", "Are you sure you want to delete your account? This action cannot be undone.", "Yes", "No");
        if (confirm)
        {
            try
            {
                await user.DeleteAsync();
                await Application.Current.MainPage.DisplayAlert("Deleted", "Your account has been deleted.", "Ok");
                NavigationManager.NavigateTo("/login");
            }
            catch (Exception ex)
            {
                await Application.Current.MainPage.DisplayAlert("Error", $"Failed to delete account: {ex.Message}", "Ok");
            }
        }
    }
}

<style>
    .account-settings {
        text-align: center;
        margin-top: 50px;
    }

    .button-group {
        display: flex;
        justify-content: center;
        gap: 20px;
        margin-top: 20px;
    }

    .change-password-button,
    .delete-button {
        padding: 10px 20px;
        font-size: 16px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

    .change-password-button {
        background-color: #4caf50; /* Grön färg för ändra lösenord-knappen */
        color: white;
    }

        .change-password-button:hover {
            background-color: #45a049;
        }

    .delete-button {
        background-color: #ff4d4d; /* Röd färg för radera konto-knappen */
        color: white;
    }

        .delete-button:hover {
            background-color: #ff3333; /* Mörkare röd för hover-effekt */
        }

    .error-message {
        color: red;
        margin-top: 15px;
    }
</style>
