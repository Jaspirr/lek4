    position: absolute;
    top: 10px;
    right: 10px;
    display: flex;
    align-items: center;
    background-color: #F0FFF0; /* Light yellow background */
    padding: 8px 12px;
    border-radius: 20px;
    box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
    font-weight: bold;
    font-size: 16px;
    color: #333;
    z-index: 10;
}

.star-wrapper {
    position: relative;
    display: inline-block;
    margin-right: 8px;
}

.credits-icon {
    font-size: 20px;
        width: 20px; /* Adjust to fit the box */
        height: 20px;
        color: #ffca28; /* Gold color for icon */
}

    .credits-count {
        font-size: 16px;
        background-color: #F0FFF0; /* White background for circle */
        color: #333; /* Text color */
        width: 24px;
        height: 24px;
        display: flex;
        align-items: center;
