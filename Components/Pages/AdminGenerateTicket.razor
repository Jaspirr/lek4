@page "/admin-generate-ticket"
@using lek4.Components.Service
@inject JackpotService JackpotService
@inject NavigationManager NavigationManager

<h3>Admin Ticket Generator</h3>
<button @onclick="NavigateBack">← Back</button>
<div class="admin-container">
    <div class="form-group">
        <label for="selectedNumber">Select Number:</label>
        <select id="selectedNumber" @bind="selectedNumber" class="form-control">
            @foreach (var number in numbers)
            {
                <option value="@number">@number</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label for="selectedColor">Select Color:</label>
        <select id="selectedColor" @bind="selectedColor" class="form-control">
            @foreach (var color in colors)
            {
                <option value="@color.Name">@color.Name</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label for="selectedSymbol">Select Symbol:</label>
        <select id="selectedSymbol" @bind="selectedSymbol" class="form-control">
            @foreach (var symbol in symbols)
            {
                <option value="@symbol.Name">@symbol.Name</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label for="selectedChineseSymbol">Select Chinese Symbol:</label>
        <select id="selectedChineseSymbol" @bind="selectedChineseSymbol" class="form-control">
            @foreach (var symbol in chineseSymbols)
            {
                <option value="@symbol.Name">@symbol.Name</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label for="selectedPlanet">Select Planet:</label>
        <select id="selectedPlanet" @bind="selectedPlanet" class="form-control">
            @foreach (var planet in planets)
            {
                <option value="@planet.Name">@planet.Name</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label for="selectedElement">Select Element:</label>
        <select id="selectedElement" @bind="selectedElement" class="form-control">
            @foreach (var element in elements)
            {
                <option value="@element.Name">@element.Name</option>
            }
        </select>
    </div>

    <button class="btn btn-primary" @onclick="GenerateAndSaveTicket">Generate Ticket</button>

    @if (!string.IsNullOrEmpty(generatedTicket))
    {
        <div class="ticket-summary">
            <h4>Generated Ticket:</h4>
            <p><strong>Number:</strong> @selectedNumber</p>
            <p><strong>Color:</strong> @selectedColor</p>
            <p><strong>Symbol:</strong> @selectedSymbol</p>
            <p><strong>Chinese Symbol:</strong> @selectedChineseSymbol</p>
            <p><strong>Planet:</strong> @selectedPlanet</p>
            <p><strong>Element:</strong> @selectedElement</p>
        </div>
    }
</div>

