    // Fetch emails, lock-in amounts, draw winner, and save to Firebase
    public async Task DrawWinnerForProduct(int productNumber)
    {
        // Perform the draw and get the winner's email
        var winnerEmail = await ProductService.GetWinnerFromFirebase(productNumber);

        if (!string.IsNullOrEmpty(winnerEmail))
        {
            // Pass the winner email to the product logic, update UI, etc.
            Console.WriteLine($"Winner for product {productNumber}: {winnerEmail}");

            // You can now use this winnerEmail in the relevant logic or send it to the product display/UI
            // For example, update product information or UI
            await UpdateProductWithWinner(productNumber, winnerEmail);
        }
        else
        {
            Console.WriteLine($"No winner found for product {productNumber}");
        }
    }

    // Sample method to update product info with winner (modify as needed)
